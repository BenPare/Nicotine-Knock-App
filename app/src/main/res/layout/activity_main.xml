<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!--button brings the user to an activity that shows them data about their progress-->

    <TextView
        android:id="@+id/textView"
        android:layout_width="367dp"
        android:layout_height="91dp"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="20dp"
        android:text="Time to Knock that Nicotine!"
        android:textAlignment="center"
        android:textColor="#FFA500"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="332dp"
        android:layout_height="90dp"
        android:layout_marginBottom="45dp"
        android:backgroundTint="#A27557"
        android:onClick="analyticsButton"
        android:text="Analytics"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <Button
        android:id="@+id/button6"
        android:layout_width="332dp"
        android:layout_height="90dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#A27557"
        android:onClick="startButton"
        android:text="I want to smoke"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="294dp"
        android:layout_height="295dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/nk_logopic" />

    <!--the user clicks this button when they want to smoke, leads to the get started activity-->

</androidx.constraintlayout.widget.ConstraintLayout>