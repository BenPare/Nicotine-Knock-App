<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionsActivity">

    <!--sets the brand of cigarette, used to find the price of an individual cigarette to calculate money saved-->

    <Button
        android:id="@+id/costButton"
        android:layout_width="290dp"
        android:layout_height="65dp"
        android:backgroundTint="#A27557"
        android:onClick="setCostButton"
        android:text="Set Cost"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How much does a pack of your cigarettes cost?"
        android:textAlignment="center"
        android:textColor="#A27557"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/costButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/setCurrencyButton"
        android:layout_width="290dp"
        android:layout_height="65dp"
        android:backgroundTint="#A27557"
        android:onClick="setCurrencyButton"
        android:text="Set Currency"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/costButton" />

    <TextView
        android:id="@+id/textViewCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Cost: "
        android:textAlignment="center"
        android:textColor="#A27557"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/setCurrencyButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/costButton" />

    <TextView
        android:id="@+id/textViewCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currency Currency: "
        android:textAlignment="center"
        android:textColor="#A27557"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setCurrencyButton" />
    <!--sets currency, might be too advanced for the assignment since brand prices are hardcoded.
    Maybe replace these with the option of specifying the price of the brand and nothing more-->
</androidx.constraintlayout.widget.ConstraintLayout>