<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionsActivity">

    <!--sets the brand of cigarette, used to find the price of an individual cigarette to calculate money saved-->

    <Button
        android:id="@+id/button4"
        android:layout_width="290dp"
        android:layout_height="65dp"
        android:layout_marginTop="110dp"
        android:backgroundTint="#A27557"
        android:text="Set Brand"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button5"
        android:layout_width="290dp"
        android:layout_height="65dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="471dp"
        android:backgroundTint="#A27557"
        android:text="Set Currency"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />
    <!--sets currency, might be too advanced for the assignment since brand prices are hardcoded.
    Maybe replace these with the option of specifying the price of the brand and nothing more-->
</androidx.constraintlayout.widget.ConstraintLayout>